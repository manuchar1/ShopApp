<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditTextStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:layout_marginBottom">@dimen/_35sdp</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="Text.Input" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?attr/colorControlActivated</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:elevation">@dimen/_6sdp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="MainHeaders" parent="Theme.MaterialComponents">
        <item name="android:textSize">@dimen/_22sdp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="DrawerMenuStyle" parent="Theme.MaterialComponents">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/main_text_color_grey</item>
    </style>

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

</resources>