        tools:layout="@layout/about_fragment" />
    <fragment
        android:id="@+id/userCartsFragment"
        android:name="com.tbcacademy.shopapp.ui.user.usercarts.UserCartsFragment"
        android:label="user_carts_fragment"
        tools:layout="@layout/user_carts_fragment" />
    <fragment
        android:id="@+id/ordersFragment"
        android:name="com.tbcacademy.shopapp.ui.orders.OrdersFragment"
        android:label="orders_fragment"
        tools:layout="@layout/orders_fragment" />
